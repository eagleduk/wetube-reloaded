extends ../base

block content
    img(src=`/${logginUser.avatarUrl}`, width=100, height=100)
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", name="avatar", id="avatar" accept="image/*")
        input(placeholder="Username", name="username" value=logginUser.username)
        input(type="submit", value="Update")
        a(href="change") Change Password &rarr;